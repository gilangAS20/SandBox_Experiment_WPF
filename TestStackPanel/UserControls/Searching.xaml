<UserControl x:Class="TestStackPanel.UserControls.Searching"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestStackPanel.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="36" d:DesignWidth="300">
    <Grid Background="White" x:Name="SearchControl">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="2" Height="30">
            <Label Content="Search Here" Margin="2"></Label>
            <TextBox Width="150" Margin="2"></TextBox>
            <Button Width="40" Content="Search" Margin="2"></Button>
        </StackPanel>
    </Grid>
</UserControl>
