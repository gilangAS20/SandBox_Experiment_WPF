<UserControl x:Class="Custom_Textbox_Control.ClearableTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Custom_Textbox_Control"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid Background="White">
        <TextBlock x:Name="tbPlaceHolder" Text="{Binding Placeholder}" FontSize="16" FontWeight="Light" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="Gray"></TextBlock>
        <TextBox x:Name="textInput" Background="Transparent" VerticalContentAlignment="Center" FontSize="16" FontWeight="Light" TextChanged="TextInput_TextChanged"></TextBox>
        <Button Width="30" Content="X" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Click="Button_Click"></Button>
            
    </Grid>
</UserControl>
